{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*", "types"],
  "exclude": [
    "node_modules",
    "**/build/*",
    "**/*.test.ts",
    "**/__tests__/*.ts",
    "**/__tests__/*.tsx",
    "**/__mocks__/*.ts"
  ]
}
